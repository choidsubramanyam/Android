<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="scan"
            type="com.example.subbu.expandablerecyclerview.Scan"/>
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@{scan.scanName}"
        android:id="@+id/text1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@{String.valueOf(scan.scanId)}"
        android:id="@+id/text2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@{String.valueOf(scan.patientScanId)}"
        android:id="@+id/text3"/>
</LinearLayout>
</LinearLayout>
</layout>